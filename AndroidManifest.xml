<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="taadnairsshha.apps.bloodbank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="taadnairsshha.apps.bloodbank.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="taadnairsshha.apps.bloodbank.LogIn"
            android:label="@string/title_activity_log_in" >
        </activity>
        <activity
            android:name="taadnairsshha.apps.bloodbank.Home"
            android:label="@string/title_activity_home"
            android:parentActivityName="taadnairsshha.apps.bloodbank.LogIn" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="taadnairsshha.apps.bloodbank.LogIn" />
        </activity>
        <activity
            android:name="taadnairsshha.apps.bloodbank.NewUser"
            android:label="@string/title_activity_new_user"
            android:parentActivityName="taadnairsshha.apps.bloodbank.LogIn" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="taadnairsshha.apps.bloodbank.LogIn" />
        </activity>
        <activity
            android:name="taadnairsshha.apps.bloodbank.VerifyContact"
            android:label="@string/title_activity_verify_contact"
            android:parentActivityName="taadnairsshha.apps.bloodbank.LogIn" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="taadnairsshha.apps.bloodbank.LogIn" />
        </activity>

        <receiver android:name="taadnairsshha.apps.bloodbank.IncomingSms" >
            <intent-filter android:priority="10000" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="taadnairsshha.apps.bloodbank.EnterDetails"
            android:label="@string/title_activity_enter_details"
            android:parentActivityName="taadnairsshha.apps.bloodbank.VerifyContact" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="taadnairsshha.apps.bloodbank.VerifyContact" />
        </activity>
        <activity
            android:name="taadnairsshha.apps.bloodbank.AskBlood"
            android:label="@string/title_activity_ask_blood"
            android:parentActivityName="taadnairsshha.apps.bloodbank.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="taadnairsshha.apps.bloodbank.Home" />
        </activity>

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="taadnairsshha.apps.bloodbank" />
            </intent-filter>
        </receiver>

        <service android:name="taadnairsshha.apps.bloodbank.GCMIntentService" />

        <activity
            android:name="taadnairsshha.apps.bloodbank.DonateBlood"
            android:label="@string/title_activity_donate_blood"
            android:parentActivityName="taadnairsshha.apps.bloodbank.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="taadnairsshha.apps.bloodbank.Home" />
        </activity>
        <activity
            android:name="taadnairsshha.apps.bloodbank.EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName="taadnairsshha.apps.bloodbank.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="taadnairsshha.apps.bloodbank.Home" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="taadnairsshha.apps.bloodbank.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="taadnairsshha.apps.bloodbank.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
